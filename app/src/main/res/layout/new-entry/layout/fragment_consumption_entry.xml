<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping Entry"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date (Click to change):"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ConsumptionEntry_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of item bought:"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/ConsumptionEntry_ItemType"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <LinearLayout
            android:id="@+id/ConsumptionEntry_ClothingFields"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pairs of clothes bought"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ConsumptionEntry_NmbClothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="6" />

            <Switch
                android:id="@+id/ConsumptionEntry_EcoFriendly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Does the clothing come from eco friendly sources?"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ConsumptionEntry_ElectronicsFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of electronics bought"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ConsumptionEntry_NmbElectronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="6" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type of Electronics"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/ConsumptionEntry_ElectronicType"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ConsumptionEntry_OtherPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type of Purchase"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/ConsumptionEntry_OtherType"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number Purchased"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ConsumptionEntry_NmbOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="6" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ConsumptionEntry_UtilityBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type of Bill"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/ConsumptionEntry_BillType"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price of Bill"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ConsumptionEntry_BillPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="6" />
        </LinearLayout>

        <Button
            android:id="@+id/ConsumptionEntry_Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="24sp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>