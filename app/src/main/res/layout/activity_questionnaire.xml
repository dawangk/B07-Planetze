<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire.QuestionnaireActivity"
    android:background="@color/light_gray"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/app_logo_no_bg"
        android:padding="20dp">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to PlanetZe!"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="@font/bold_font">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:text="We're glad to have you!"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:fontFamily="@font/reg_font">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:text="Whether this is your first step towards\
            reducing your carbon footprint, or this\n is another step in the right direction,\n you've come to the right place."
        android:textColor="@color/black"
        android:textSize="22dp"
        android:fontFamily="@font/reg_font">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:text="At PlanetZe, our goal is improvement"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:fontFamily="@font/reg_font">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:padding="4.1dp"
        android:text="To begin, let's calculate your current\n carbon footprint based on your lifestyle."
        android:textColor="@color/black"
        android:textSize="22dp"
        android:fontFamily="@font/reg_font">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="4.1dp"
        android:text="You only need to do this once"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/reg_font">

    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_gray"
        android:text="Get Started"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="25dp"
        android:fontFamily="@font/bold_font"
        android:textStyle="bold"
        android:id="@+id/start_questionnaire_button"
        android:visibility="visible">

    </Button>




</LinearLayout>
