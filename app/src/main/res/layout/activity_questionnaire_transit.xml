<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire.QuestionnaireTransitActivity"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/app_logo_no_bg"
        android:padding="30dp">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="How often do you use public\ntransportation (bus, train, subway)?"
        android:textColor="@color/black"
        android:fontFamily="@font/reg_font"
        android:textSize="20dp"
        android:layout_marginTop="-10dp"
        android:padding="10dp"
        android:textStyle="bold">
    </TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp" />

        <RadioButton
            android:id="@+id/occasionally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occasionally (1-2 times/week)"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

        <RadioButton
            android:id="@+id/frequently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently (3-4 times/week)"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

        <RadioButton
            android:id="@+id/always"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Always (5+ times/week)"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="How much time do you spend on public\ntransport per week (bus, train, subway)?"
        android:textColor="#1b1b1e"
        android:fontFamily="@font/reg_font"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textStyle="bold">
    </TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under 1 hour"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-3 hours"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-5 hours"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5-10 hours"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

        <RadioButton
            android:id="@+id/option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More than 10 hours"
            android:textColor="#1b1b1e"
            android:textSize="20dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Next"
        android:textStyle="bold"
        android:fontFamily="@font/bold_font"
        android:textColor="#d8dbe2"
        android:backgroundTint="#373f51"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"/>

</LinearLayout>