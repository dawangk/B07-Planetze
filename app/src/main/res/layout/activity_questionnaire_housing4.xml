<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire.QuestionnaireHousingActivity4"
    android:background="#a9bcd0"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/app_logo_no_bg"
        android:padding="30dp">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Do you use any renewable energy sources for electricity or heating (e.g., solar, wind)?"
        android:textColor="#1b1b1e"
        android:fontFamily="@font/reg_font"
        android:textSize="20dp"
        android:layout_marginTop="-10dp"
        android:padding="10dp"
        android:textStyle="bold">
    </TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/primarily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, primarily (more than 50% of energy use)"
            android:textColor="#1b1b1e"
            android:textSize="17dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="15dp" />

        <RadioButton
            android:id="@+id/partially"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, partially (less than 50% of energy use)"
            android:textColor="#1b1b1e"
            android:textSize="17dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="15dp"/>

        <RadioButton
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="#1b1b1e"
            android:textSize="17dp"
            android:fontFamily="@font/reg_font"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="15dp"/>


    </RadioGroup>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Next"
        android:textStyle="bold"
        android:fontFamily="@font/bold_font"
        android:textColor="#d8dbe2"
        android:backgroundTint="#373f51"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"/>

</LinearLayout>